# F1 Analytics Production Environment Configuration Template
# Copy this file to .env.production and update the values for your production environment
# DO NOT commit .env files to version control

# Database Configuration (Production)
POSTGRES_DB=f1_analytics_prod
POSTGRES_USER=f1user_prod
# SECURITY: Generate with: openssl rand -base64 32 | tr -d "=+/"
POSTGRES_PASSWORD=<generate_production_db_password>
DATABASE_URL=postgresql://f1user_prod:<generate_production_db_password>@postgres:5432/f1_analytics_prod

# Redis Configuration (Production)
# SECURITY: Generate with: openssl rand -base64 32 | tr -d "=+/"
REDIS_PASSWORD=<generate_production_redis_password>
REDIS_URL=redis://:<generate_production_redis_password>@redis:6379/0

# Celery Configuration (Production)
CELERY_BROKER_URL=redis://:<generate_production_redis_password>@redis:6379/0
CELERY_RESULT_BACKEND=redis://:<generate_production_redis_password>@redis:6379/0

# JWT Configuration (Production - CRITICAL: Generate with: openssl rand -base64 64)
JWT_SECRET_KEY=<generate_with_openssl_rand_base64_64>
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# External API Configuration
ERGAST_API_URL=https://ergast.com/api/f1
WEATHER_API_KEY=your_production_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Frontend Configuration (Production)
VITE_API_URL=https://your-production-domain.com/api
VITE_APP_NAME=F1 Analytics Dashboard
VITE_ENVIRONMENT=production

# Application Configuration (Production)
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Security Configuration (Production)
CORS_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com
ALLOWED_HOSTS=your-production-domain.com,www.your-production-domain.com

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_BURST=60

# Database Pool Configuration
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Connection Pool
REDIS_MAX_CONNECTIONS=50

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Monitoring Configuration (Production)
# SECURITY: Generate with: openssl rand -base64 24 | tr -d "=+/"
GRAFANA_ADMIN_PASSWORD=<generate_production_grafana_password>

# Production Security Checklist:
# 1. Change ALL default passwords above
# 2. Generate JWT secret with: openssl rand -base64 64
# 3. Set up SSL/TLS certificates
# 4. Configure CORS_ORIGINS for your domain only
# 5. Set ALLOWED_HOSTS for your domain only
# 6. Use strong passwords for all services (minimum 16 characters)
# 7. Regularly rotate passwords and secrets
# 8. Set up monitoring and alerting
# 9. Configure database backups
# 10. Implement log rotation and monitoring