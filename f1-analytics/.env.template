# F1 Analytics Environment Configuration Template
# Copy this file to .env and fill in the values
# DO NOT commit .env files to version control

# Database Configuration
POSTGRES_DB=f1_analytics
POSTGRES_USER=f1user
# SECURITY: Generate secure password with: openssl rand -base64 24
POSTGRES_PASSWORD=<generate_secure_24_char_password>
DATABASE_URL=postgresql://f1user:<generate_secure_24_char_password>@postgres:5432/f1_analytics

# Redis Configuration
# SECURITY: Generate secure password with: openssl rand -base64 24
REDIS_PASSWORD=<generate_secure_24_char_password>
REDIS_URL=redis://:<generate_secure_24_char_password>@redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://:<generate_secure_24_char_password>@redis:6379/0
CELERY_RESULT_BACKEND=redis://:<generate_secure_24_char_password>@redis:6379/0

# JWT Configuration - CRITICAL: Generate with: openssl rand -base64 64
JWT_SECRET_KEY=<generate_with_openssl_rand_base64_64>
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Flower Monitoring Configuration
FLOWER_BASIC_AUTH=admin:<generate_secure_16_char_password>

# External API Configuration
ERGAST_API_URL=https://ergast.com/api/f1
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=F1 Analytics Dashboard
VITE_ENVIRONMENT=development

# Instructions for generating secure values:
# - PostgreSQL Password: Use a strong password with at least 16 characters
# - Redis Password: Use a strong password with at least 16 characters
# - JWT Secret: Generate with: openssl rand -base64 32
# - Flower Password: Use a strong password for basic auth