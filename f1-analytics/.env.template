# F1 Analytics Environment Configuration Template
# Copy this file to .env and fill in the values
# DO NOT commit .env files to version control

# Database Configuration
POSTGRES_DB=f1_analytics
POSTGRES_USER=f1user
POSTGRES_PASSWORD=please_change_this_password_in_production
DATABASE_URL=postgresql://f1user:please_change_this_password_in_production@postgres:5432/f1_analytics

# Redis Configuration
REDIS_PASSWORD=please_change_this_redis_password
REDIS_URL=redis://:please_change_this_redis_password@redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://:please_change_this_redis_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:please_change_this_redis_password@redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=please_generate_secure_jwt_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Flower Monitoring Configuration
FLOWER_BASIC_AUTH=admin:please_change_flower_password

# External API Configuration
ERGAST_API_URL=https://ergast.com/api/f1
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=F1 Analytics Dashboard
VITE_ENVIRONMENT=development

# Instructions for generating secure values:
# - PostgreSQL Password: Use a strong password with at least 16 characters
# - Redis Password: Use a strong password with at least 16 characters
# - JWT Secret: Generate with: openssl rand -base64 32
# - Flower Password: Use a strong password for basic auth