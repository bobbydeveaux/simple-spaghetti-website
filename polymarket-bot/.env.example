# Polymarket Bot Configuration
# Copy this file to .env and fill in your actual API keys

# Polymarket API Configuration
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_API_SECRET=your_polymarket_api_secret_here
POLYMARKET_BASE_URL=https://api.polymarket.com

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_BASE_URL=https://api.binance.com

# CoinGecko API Configuration
COINGECKO_API_KEY=your_coingecko_api_key_here
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# Trading Configuration
MAX_POSITION_SIZE=1000
RISK_PERCENTAGE=0.02
STOP_LOSS_PERCENTAGE=0.05

# WebSocket Configuration
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_ATTEMPTS=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=polymarket_bot.log

# Prediction Engine Configuration
RSI_PERIOD=14
RSI_OVERSOLD_THRESHOLD=30.0
RSI_OVERBOUGHT_THRESHOLD=70.0
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9
ORDER_BOOK_BULLISH_THRESHOLD=1.1
ORDER_BOOK_BEARISH_THRESHOLD=0.9
PREDICTION_CONFIDENCE_SCORE=0.75

# Trade Execution Configuration
EXECUTION_MAX_RETRIES=3
EXECUTION_RETRY_BASE_DELAY=2.0
EXECUTION_SETTLEMENT_POLL_INTERVAL=10
EXECUTION_SETTLEMENT_TIMEOUT=300
